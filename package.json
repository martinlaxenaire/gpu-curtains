{
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "@webgpu/types": "^0.1.32",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "2.8.8",
    "rimraf": "^5.0.5",
    "typedoc": "^0.25.6",
    "typescript": "^5.1.3",
    "vite": "^5.0.7"
  },
  "name": "gpu-curtains",
  "version": "0.0.1",
  "description": "gpu-curtains is attempt at porting curtainsjs library to WebGPU",
  "author": "Martin Laxenaire",
  "license": "MIT",
  "private": true,
  "dependencies": {},
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/gpu-curtains.umd.js",
  "module": "./dist/gpu-curtains.js",
  "exports": "./dist/gpu-curtains.js",
  "directories": {
    "example": "examples",
    "test": "tests"
  },
  "scripts": {
    "dev": "vite",
    "build:docs": "rimraf docs && typedoc --entryPointStrategy expand src/types/* src/utils/* src/math/* src/core/**/* src/curtains/**/* src/extras/**/*",
    "build:types": "rimraf dist/types && tsc --allowJs -d --emitDeclarationOnly",
    "build:main": "vite build",
    "build:dist": "yarn build:types && yarn build:main"
  }
}
