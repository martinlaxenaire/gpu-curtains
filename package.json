{
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "@webgpu/types": "^0.1.32",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "2.8.8",
    "rimraf": "^5.0.5",
    "typedoc": "^0.25.6",
    "typescript": "^5.1.3",
    "vite": "^5.0.12"
  },
  "name": "gpu-curtains",
  "version": "0.0.1",
  "description": "gpu-curtains is a WebGPU rendering engine that helps synchronizing 3D objects scale and position with associated DOM HTML elements",
  "keywords": [
    "webgpu",
    "dom",
    "html5",
    "javascript",
    "3d",
    "canvas",
    "curtains",
    "gpu-curtains"
  ],
  "author": {
    "name": "Martin Laxenaire",
    "email": "martin.laxenaire@gmail.com",
    "url": "https://martin-laxenaire.fr/"
  },
  "homepage": "https://martinlaxenaire.github.io/",
  "bugs": {
    "url": "https://github.com/martinlaxenaire/gpu-curtains/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martinlaxenaire/gpu-curtains.git"
  },
  "license": "MIT",
  "dependencies": {},
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/gpu-curtains.umd.cjs",
  "module": "./dist/gpu-curtains.js",
  "exports": {
    ".": {
      "import": "./dist/gpu-curtains.js",
      "require": "./dist/gpu-curtains.umd.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "tests"
  },
  "scripts": {
    "dev": "vite --host",
    "build:docs": "rimraf docs && typedoc --options typedoc.json",
    "build:types": "rimraf dist/types && tsc --allowJs -d --emitDeclarationOnly",
    "build:main": "vite build",
    "build:minified": "vite build --config vite.minified.config.js",
    "build:dist": "yarn build:types && yarn build:main && yarn build:minified",
    "build": "yarn build:dist && yarn build:docs"
  }
}
