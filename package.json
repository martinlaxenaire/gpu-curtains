{
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "@webgpu/types": "^0.1.32",
    "esbuild": "^0.18.11",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "2.8.8",
    "rimraf": "^5.0.5",
    "typescript": "^5.1.3",
    "vite": "^5.0.7"
  },
  "name": "gpu-curtains",
  "version": "0.0.1",
  "description": "gpu-curtains is attempt at porting curtainsjs library to WebGPU",
  "author": "Martin Laxenaire",
  "license": "MIT",
  "private": true,
  "dependencies": {},
  "directories": {
    "example": "examples",
    "test": "tests"
  },
  "scripts": {
    "dev": "vite",
    "build:docs": "rimraf docs && jsdoc src -r -d docs",
    "build:types": "rimraf dist/types && tsc --allowJs -d --emitDeclarationOnly",
    "build:minified": "esbuild src/index.js --bundle --minify --outfile=dist/gpu-curtains.min.js --global-name=GPUCurtains",
    "build:iife": "esbuild src/index.js --bundle --outfile=dist/gpu-curtains.js --global-name=GPUCurtains",
    "build:dist": "yarn build:types && yarn build:minified && yarn build:iife"
  }
}
