{
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "@webgpu/types": "^0.1.32",
    "esbuild": "^0.18.11",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "2.8.8",
    "typescript": "^5.1.3"
  },
  "name": "gpu-curtains",
  "version": "0.0.1",
  "description": "gpu-curtains is attempt at porting curtainsjs library to WebGPU",
  "author": "Martin Laxenaire",
  "license": "MIT",
  "private": true,
  "dependencies": {},
  "scripts": {
    "compile:types": "tsc --allowJs -d --noEmit",
    "build:types": "copyfiles --up 1 src/**/*.d.ts dist/types",
    "build:minified": "esbuild src/index.js --bundle --minify --outfile=dist/gpu-curtains.min.js --global-name=GPUCurtains",
    "build:iife": "esbuild src/index.js --bundle --outfile=dist/gpu-curtains.js --global-name=GPUCurtains",
    "build:dist": "tsc --allowJs -d --noEmit && yarn build:types && yarn build:minified && yarn build:iife"
  }
}
